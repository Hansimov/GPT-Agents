{
    "configs": {
        "view": {
            "autoPanAndZoomOnLoad": "fit-content"
        },
        "node": {
            "normal": {
                "type": "circle",
                "radius": 25
            },
            "hover": {
                "color": "#88bbff"
            },
            "label": {
                "visible": true,
                "fontSize": 12,
                "directionAutoAdjustment": true
            }
        },
        "edge": {
            "gap": 12,
            "normal": {
                "color": "gray"
            },
            "marker": {
                "source": {
                    "type": "none",
                    "width": 6,
                    "height": 6,
                    "margin": -1,
                    "units": "strokeWidth",
                    "color": null
                },
                "target": {
                    "type": "arrow",
                    "width": 6,
                    "height": 6,
                    "margin": -1,
                    "units": "strokeWidth",
                    "color": null
                }
            }
        },
        "path": {
            "visible": true,
            "normal": {
                "width": 12,
                "dasharray": "20 16",
                "animate": true,
                "animationSpeed": 30
            },
            "end": "edgeOfNode"
        }
    }
}